			<table class="table table-hover">
				<thead>
					<tr>
						<th>僑生編號</th>
						<th>學生姓名</th>
						<th>不合格原因</th>
						<th>備註</th>
					</tr>
				</thead>
				<tbody id="tbody-failed"></tbody>
			</table>
